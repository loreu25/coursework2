@model MusicCatalog.Models.Music

@{
    ViewData["Title"] = "Удалить музыку";
}

<h1>Удалить музыку</h1>

<h3>Вы уверены, что хотите удалить эту композицию?</h3>
<div>
    <h4>Музыкальная композиция</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Дата записи
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RecordingDate)
        </dd>
        <dt class = "col-sm-2">
            Жанр
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre.Name)
        </dd>
        <dt class = "col-sm-2">
            Исполнитель
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artist.Name)
        </dd>
        <dt class = "col-sm-2">
            Композитор
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Composer.Name)
        </dd>
        <dt class = "col-sm-2">
            Лейбл
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Label.Name)
        </dd>
        <dt class = "col-sm-2">
            Тип носителя
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MediaType.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MusicId" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Вернуться к списку</a>
    </form>
</div>
