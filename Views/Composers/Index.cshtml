@model IEnumerable<MusicCatalog.Models.Composer>

@{
    ViewData["Title"] = "Композиторы";
}

<h1>Композиторы</h1>

@if (User.IsInRole("Musician"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Добавить нового композитора</a>
    </p>
}

<!-- Поиск -->
<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="form-inline">
            <div class="form-group mr-3">
                <label for="searchString" class="mr-2">Поиск:</label>
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Имя композитора" />
            </div>
            <input type="submit" value="Найти" class="btn btn-secondary" />
            <a asp-action="Index" class="btn btn-outline-secondary ml-2">Сбросить</a>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(model => model.Name)
                </a>
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (User.IsInRole("Musician"))
                {
                    <a asp-action="Edit" asp-route-id="@item.ComposerId" class="btn btn-sm btn-warning">Изменить</a>
                }
                <a asp-action="Details" asp-route-id="@item.ComposerId" class="btn btn-sm btn-info">Подробно</a>
                @if (User.IsInRole("Musician"))
                {
                    <a asp-action="Delete" asp-route-id="@item.ComposerId" class="btn btn-sm btn-danger">Удалить</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
